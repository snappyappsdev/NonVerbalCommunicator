<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="4">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:layout_weight="2"
            android:weightSum="3">

            <ImageButton
                android:id="@+id/pec_photo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="2">

                <ImageButton
                    android:scaleType="fitCenter"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:src="@android:drawable/ic_menu_camera"
                    android:id="@+id/pec_camera"
                    android:background="@android:color/transparent"/>

                <ImageButton
                    android:scaleType="fitCenter"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:src="@android:drawable/ic_btn_speak_now"
                    android:id="@+id/pec_microphone"
                    android:background="@android:color/transparent"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_pec_name"
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/name"/>

        <EditText
            android:layout_margin="16dp"
            android:id="@+id/enter_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="@string/enter_name"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight=".75"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="2"
            android:layout_margin="16dp">

            <Button
                android:id="@+id/pec_reset"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/reset_pec" />

            <Button
                android:id="@+id/pec_save"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/save_pec"/>

        </LinearLayout>
    </LinearLayout>
</layout>
